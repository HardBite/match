<%= form_for @match, :html => {:class => "form-inline", :multipart => "true"} do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <div class="input-group">
    <%= f.label :host %><br>
    <%= f.text_field :host %>
  </div>
  <div class="input-group">
    <%= f.label :host_score %><br>
    <%= f.number_field :host_score %>
  </div>
  <div class="input-group">
    <%= f.label :guest_score %><br>
    <%= f.number_field :guest_score %>
  </div>
  <div class="input-group">
    <%= f.label :guest %><br>
    <%= f.text_field :guest %>
  </div>
  <div class="field">
    <%= f.label :day %><br>
    <%= f.date_select :day %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

   <%= f.fields_for :photo do |builder| %>
     <div class="field">
       <fieldset>
       <%= builder.label :image %><br>
       <%= builder.file_field :image, :multiple => true, name: "photos[image][]" %>
       <fieldset>
     </div>
   <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
