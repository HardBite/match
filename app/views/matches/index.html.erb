<h1>Listing matches</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Host</th>
      <th>Host score</th>
      <th>Guest</th>
      <th>Guest score</th>
      <th>Day</th>
      <th>Votes</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.host %></td>
        <td><%= match.host_score %></td>
        <td><%= match.guest %></td>
        <td><%= match.guest_score %></td>
        <td><%= match.day %></td>
        <td><%= match.voted.to_i %></td>
        <td><%= match.rating.to_f.round(2) %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

